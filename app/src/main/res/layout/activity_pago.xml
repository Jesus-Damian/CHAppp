<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pago">

    <TextView
        android:id="@+id/textViewPago"
        android:layout_width="209dp"
        android:layout_height="44dp"
        android:text="Pagar"
android:gravity="center"
        android:textColor="#757272"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />

    <Button
        android:id="@+id/buttonPagar"
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/btnesecundario"
        android:text="Generar Pago"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextNip"
        android:layout_width="127dp"
        android:layout_height="47dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="208dp"
        android:layout_weight="9"
        android:background="@drawable/textround"
        android:ems="10"
        android:hint="  NIP"
        android:inputType="number"
        android:textColor="#757272"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/editTextcvv" />

    <EditText
        android:id="@+id/editTextcvv"
        android:layout_width="127dp"
        android:layout_height="47dp"
        android:layout_marginEnd="224dp"
        android:layout_marginBottom="208dp"
        android:layout_weight="9"
        android:background="@drawable/textround"
        android:ems="10"
        android:hint="  CVV"
        android:inputType="number"
        android:textColor="#757272"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextFechaEx"
        android:layout_width="377dp"
        android:layout_height="49dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="172dp"
        android:layout_weight="9"
        android:background="@drawable/textround"
        android:ems="10"
        android:hint="  Fecha de expedicion"
        android:inputType="number"
        android:textColor="#757272"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumT"
        app:layout_constraintVertical_bias="0.175" />

    <EditText
        android:id="@+id/editTextNumT"
        android:layout_width="377dp"
        android:layout_height="49dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="272dp"
        android:layout_weight="9"
        android:background="@drawable/textround"
        android:ems="10"
        android:hint="  Numero de tarjeta"
        android:inputType="number"
        android:textColor="#757272"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberCP"
        app:layout_constraintVertical_bias="0.168" />

    <EditText
        android:id="@+id/editTextNumberCP"
        android:layout_width="377dp"
        android:layout_height="49dp"
        android:layout_marginBottom="360dp"
        android:layout_weight="9"
        android:background="@drawable/textround"
        android:drawableLeft="@drawable/number"
        android:ems="10"
        android:hint="  Numero de Contrato"
        android:inputType="number"
        android:textColor="#757272"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombreP"
        app:layout_constraintVertical_bias="0.272" />

    <EditText
        android:id="@+id/editTextNombreP"
        android:layout_width="377dp"
        android:layout_height="49dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="9"
        android:background="@drawable/textround"
        android:ems="10"
        android:hint="  Nombre"
        android:textColor="#757272"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreP" />

    <ImageView
        android:id="@+id/nombreP"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/log" />

    <ImageButton
        android:id="@+id/menu4"
        android:layout_width="83dp"
        android:layout_height="78dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/imgbtn"
        android:onClick="Mas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938"
        app:srcCompat="@drawable/mas" />

    <ImageButton
        android:id="@+id/menu3"
        android:layout_width="83dp"
        android:layout_height="78dp"
        android:layout_marginEnd="116dp"
        android:background="@drawable/imgbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938"
        app:srcCompat="@drawable/pagos" />

    <ImageButton
        android:id="@+id/menu2"
        android:layout_width="83dp"
        android:layout_height="78dp"
        android:layout_marginStart="112dp"
        android:background="@drawable/imgbtn"
        android:onClick="Rep"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938"
        app:srcCompat="@drawable/pag"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/menu1"
        android:layout_width="83dp"
        android:layout_height="78dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/imgbtn"
        android:onClick="Hom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938"
        app:srcCompat="@drawable/homeee" />
</android.support.constraint.ConstraintLayout>