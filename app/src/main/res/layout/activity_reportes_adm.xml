<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReportesAdm">

    <TextView
        android:id="@+id/txtV1"
        android:layout_width="159dp"
        android:layout_height="64dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Reportes"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img1ReporAdm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtV1"
        app:srcCompat="@drawable/log" />

    <ImageButton
        android:id="@+id/imgB1ReprtAdm"
        android:layout_width="82dp"
        android:layout_height="74dp"
        android:layout_marginStart="164dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/imgbtn"
        android:onClick="Usuarios"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/user" />

    <ImageButton
        android:id="@+id/imgB2ReprtAdm"
        android:layout_width="82dp"
        android:layout_height="74dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/imgbtn"
        app:layout_constraintEnd_toStartOf="@+id/imgB1ReprtAdm"
        app:layout_constraintHorizontal_bias="0.768"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/homme" />

    <ImageButton
        android:id="@+id/imgB3ReprtAdm"
        android:layout_width="82dp"
        android:layout_height="74dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/imgbtn"
        android:onClick="Main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgB1ReprtAdm"
        app:srcCompat="@drawable/exitt" />

</android.support.constraint.ConstraintLayout>